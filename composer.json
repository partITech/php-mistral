{
    "name": "partitech/php-mistral",
    "description": "Connect to Mistral | Anthropic | Xai | Hugging Face | LamaC++ | Vllm | Ollama",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Partitech\\PhpMistral\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "symfony/http-client": "^6.3 || ^7.0",
        "guzzlehttp/guzzle": "^7.9",
        "php-http/curl-client": "^2.3",
        "php-http/message": "^1.16",
        "ext-curl": "*",
        "symfony/dotenv": "^6.3 || ^7.0",
        "ext-posix": "*",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "test": "COMPOSER_PROCESS_TIMEOUT=900 phpunit --testdox",
        "test-lamacpp": "COMPOSER_PROCESS_TIMEOUT=900 phpunit --testdox tests/Functional/Clients/LLaMaCpp",
        "test-ollama": "COMPOSER_PROCESS_TIMEOUT=900 phpunit --testdox tests/Functional/Clients/Ollama",
        "test-vllm": "COMPOSER_PROCESS_TIMEOUT=900 phpunit --testdox tests/Functional/Clients/vLLM",
        "analyse": "phpstan analyse --configuration=phpstan.neon"
    },
    "require": {
        "php": ">=8.2",
        "ext-fileinfo": "*",
        "ext-http": "*",
        "symfony/mime": "^6.3 || ^7.0",
        "ramsey/uuid": "^4.7",
        "knplabs/php-json-schema": "^0.1.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "php-http/discovery": "^1.20",
        "psr/http-client": "^1.0",
        "nyholm/psr7": "^1.8",
        "php-http/multipart-stream-builder": "^1.4",
        "ext-zip": "*",
        "czproject/git-php": "^4.4",
        "logiscape/mcp-sdk-php": "^1.1",
        "monolog/monolog": "^3.9"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "exclude-from-classmap": [
            "/tests/",
            "/vendor/phpunit/",
            "/vendor/symfony/dotenv/"
        ]
    }
}
